\section{Metodología}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{frame}{Metodología}
    \begin{itemize}
        \item \textbf{UNIDAD DE ANALISIS:} Departamentos de Bolivia\\
        \item  \textbf{TEMPORALIDAD} Para abordar la temporalidad Pre y Post-COVID se usaron datos del 2019 y 2022
    \end{itemize}
\end{frame}

\begin{frame}{Metodologia}
    \begin{table}[h]
\centering
\caption{Variables utilizadas}
\resizebox{\textwidth}{!}{%
\begin{tabular}{|l|l|l|}
\hline
\textbf{Variables} & \textbf{Recodificación} & \textbf{Origen} \\ \hline
\textbf{Entorno micro} & & \\ \hline
Base empresarial  & BASE EMPRESARIAL & SEPREC \\ \hline
Informalidad  & INFORMALIDAD & Encuesta Hogares, INE \\ \hline
Población ocupada en el sector primario & OCU\_PRIM & Encuesta Hogares, INE \\ \hline
Población ocupada en el sector terciario  & OCU\_TERC & Encuesta Hogares, INE \\ \hline
Unidades educativas  & UNIDADES EDUCATIVAS & Ministerio de Educación \\ \hline
\textbf{Entorno macro} & & \\ \hline
Índice de Gini  & GINI & IISEC \\ \hline
Consumo privado  & CONSUMO PRIVADO & INE \\ \hline
Inversión privada  & INVERSION PRIVADA & INE \\ \hline
Coeficiente de localización del sector primario  & CL\_PRIM & INE \\ \hline
Coeficiente de localización del sector secundario  & CL\_SEC & INE \\ \hline
Coeficiente de localización del sector terciario  & CL\_TERC & INE \\ \hline
\end{tabular}
}
\label{tabla:variables}
\end{table}

\end{frame}

\begin{frame}
    \frametitle{Metodología}
   \textbf{ Tratamiento de las variables}: \\
   informalidad\\
    \begin{equation}
Informalidad =\% Poblacion\ no\ afiliada\ a\ las\ AFP\ 
    \end{equation}
    Consumo  \\
    \begin{equation}
        C_j=(Aporte\ de\ C\ en\ el\ PIB\ )\ast\ (Aporte\ del\ Depto\ j\ en\ el\ PIB)
    \end{equation}
    Inversión \\
    \begin{equation}
        I_j=(Aporte\ de\ I\ en\ el\ PIB\ )\ast\ (Aporte\ del\ Depto\ j\ en\ el\ PIB)
    \end{equation}
\end{frame}


\begin{frame}
    \frametitle{Metodología}
    \textbf{Tratamiento de las variables:}\\
    coeficiente de localización
    
        \begin{equation}
        CL=\frac{\frac{V_{ij}}{{\sum_{i} V}_{ij}}}{\frac{{\sum_{i} V}_{ij}}{\sum_{j}{\sum_{i} V}_{ij}}}
    \end{equation}
    
    Donde: \\
$V_{ij}$: PIB aportado por la actividad j en el departamento i\\
${\sum_{i} V}_{ij}$: PIB del departamento j\\
$\sum_{j}{\sum_{i} V}_{ij}$: PIB nacional\\

\end{frame}

\begin{frame}{Metodología}
\textbf{Tecnicas de analisis}\\
\begin{itemize}
    \item Analisis Factorial Exploratorio
    \begin{itemize}
        \item Prueba Kaiser-Meyer-Olkin (KMO)
    \end{itemize}
    \item Clasificacion Jerarquica
        \begin{itemize}
        \item Distancias euclideas al caudrado
        \item Metodo de Ward
    \end{itemize}
\end{itemize}

\end{frame}

